<p id="notice"><%= notice %></p>

<h1>Listing Features</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Tag list</th>
      <th>Tag item title</th>
      <th>Tag item link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @features.each do |feature| %>
      <tr>
        <td><%= feature.name %></td>
        <td><%= feature.tag_list %></td>
        <td><%= feature.tag_item_title %></td>
        <td><%= feature.tag_item_link %></td>
        <td><%= link_to 'Show', feature %></td>
        <td><%= link_to 'Edit', edit_feature_path(feature) %></td>
        <td><%= link_to 'Destroy', feature, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Feature', new_feature_path, :class => "btn btn-primary" %>
